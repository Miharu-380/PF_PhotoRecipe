<div class="container">
  <div class="col-12 mx-auto">
    <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
      <%= render 'layouts/error', obj: @user %>
      <div class="profile-shape">
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60" %>
      </div><br>
      <div class="form-group">
      <%= f.label "プロフィール画像" %><br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>

      <div class="form-group">
      <%= f.label "名前" %>
      <%= f.text_field :name, autofocus: true, placeholder: "令和道子", class: "form-control" %>
      </div>

      <div class="form-group">
      <%= f.label "ユーザーネーム" %>
      <%= f.text_field :username, autofocus: true, placeholder: "半角英数字記号（- , _)", class: "form-control" %>
      </div>

      <div class="form-group">
      <%= f.label "紹介文" %>
      <%= f.text_field :introduction, autofocus: true, placeholder: "初めまして！", class: "form-control" %>
      </div>

      <div class="form-group">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control" %>
      </div>
      <br>
      <div>
      <%= f.label "会員ステータス", class: "mr-5 mb-5"%>
      <%= f.radio_button :is_deleted, "false" %>有効 　　<%= f.radio_button :is_deleted, "true" %>退会
      </div>

      <%= f.submit "編集内容を保存", class: "btn btn-outline-info w-100" %>
      <br><br>
    <% end %>
  </div>
</div>
