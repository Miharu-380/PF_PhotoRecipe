<%= form_with model: @user, url: user_path, local: true do |f| %>
  <%= render 'layouts/error', obj: @user %>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
  <%= f.label "プロフィール画像" %><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
<br>
  <%= f.label "名前" %>
  <%= f.text_field :name, autofocus: true, placeholder: "令和道子" %>
<br>
  <%= f.label "ユーザーネーム" %>
  <%= f.text_field :username, autofocus: true, placeholder: "半角英数字記号（- , _)" %>
<br>
  <%= f.label "紹介文" %>
  <%= f.text_field :introduction, autofocus: true, placeholder: "初めまして！" %>
<br>
  <%= f.label "メールアドレス" %>
  <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %>
<br>
  <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger" %>
<% end %>