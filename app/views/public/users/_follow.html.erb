<% if current_user.following?(user) %>
  <%= link_to "フォローを外す", user_relationships_path(user), class: "btn btn-outline-info", method: :delete, data: {"turbolinks" => false} %>
<% else %>
  <%= link_to "フォロー", user_relationships_path(user), class: "btn btn-outline-info", method: :post, data: {"turbolinks" => false} %>
<% end %>