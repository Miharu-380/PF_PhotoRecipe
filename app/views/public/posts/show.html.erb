<div class="container">
  <div class="col-10 mx-auto">
    <div class="profile-shape">
      <%= attachment_image_tag @post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60" %>
      <%= link_to user_path(@post.user) do %>
        <%= @post.user.username %>
      <% end %>
    </div>
    <div class="post-size text-center">
      <%= link_to hoge-image, "data-lightbox": hoge-image do %>
        <%= image_tag hoge-image, class:"img"%>
      <% end %>
      <%= attachment_image_tag @post, :image %>
    </div>

    <div class="d-flex">
      <!--いいねボタン-->
      <div class="d-flex mr-auto p-2 bd-highlight">
        <div id="like-icon-post-<%= @post.id.to_s %>">
          <% if @post.liked_by(current_user).present? %>
            <%= link_to "いいねを取り消す", post_like_path(@post.id, @post.liked_by(current_user)), method: :DELETE, remote: true, class: "loved hide-text" %>
          <% else %>
            <%= link_to "いいね", post_likes_path(@post), method: :POST, remote: true, class: "love hide-text" %>
          <% end %>
        </div>
        <div id="like-text-post-<%= @post.id.to_s %>" class="mt-2">
          <%= render "like_text", { likes: @post.likes, post: @post } %>
        </div>
      </div>

      <!--ツイート共有ボタン-->
      <div class="p-2 bd-highlight">
        <%= link_to "ツイート共有", "https://twitter.com/share?url=#{ request.url }/&text=フォトレシピを投稿しました！&hashtags=スマフォトレシピ", class: 'tweet-btn hide-text', target: '_blank' %>
      </div>

      <!--ブックマークボタン-->
      <div class="p-2 bd-highlight">
        <div id="bookmark-icon-post-<%= @post.id.to_s %>">
          <% if @post.bookmarked_by(current_user).present? %>
            <%= link_to "お気に入りを外す", post_bookmark_path(@post.id, @post.bookmarked_by(current_user)), method: :DELETE, remote: true, class: "bookmarked hide-text" %>
          <% else %>
            <%= link_to "お気に入り", post_bookmarks_path(@post), method: :POST, remote: true, class: "bookmark hide-text" %>
          <% end %>
        </div>
      </div>
    </div>


      <p><%= @post.created_at.strftime('%Y/%m/%d') %>
      <p><%= @post.title %>

      <% if user_signed_in? && current_user.id == @post.user_id  %>
        <%= link_to "編集", edit_post_path(@post) %>
        <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %></p>

      <p>機種・アプリ：<%= @post.photo_app %></p>
      <p>撮影フィルター：<%= @post.photo_filter %></p>
      <p>加工アプリ：<%= @post.fix_app %></p>
      <p>加工フィルター：<%= @post.fix_filter %></p>
      <p>露出：<%= @post.exposure %>　ハイライト：<%= @post.highlight %>　ブリリアンス：<%= @post.burilliance %>　シャドウ：<%= @post.shadow %></p>
      <p>コントラスト：<%= @post.contrast %>　明るさ：<%= @post.brightness %>　彩度：<%= @post.saturation %>　暖かさ：<%= @post.warmth %>　シャープネス： <%= @post.sharpness %></p>

      <p><%= render_with_hashtags(@post.body) %></p>

    <!--コメント-->
      <div id="review-post-<%= @post.id.to_s %>">
        <%= render 'review_list', { post: @post } %>
      </div>
      <div class="row" id="review-form-post-<%= @post.id.to_s %>">
        <%= form_with model: [@post, Review.new], class: "w-100" do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :post_id, value: @post.id %>
          <%= f.text_field :review, class: "form-control border-0", placeholder: "コメント ...", autocomplete: :off %>
          <%= f.submit "送信", class: "btn btn-outline-dark float-right" %>
        <% end %>
  </div>
</div>