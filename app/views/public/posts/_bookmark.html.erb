<% if post.bookmarked_by(current_user).present? %>
  <%= link_to "お気に入りを外す", post_bookmark_path(post.id, post.bookmarked_by(current_user)), method: :DELETE, remote: true, class: "bookmarked hide-text" %>
<% else %>
  <%= link_to "お気に入り", post_bookmarks_path(post), method: :POST, remote: true, class: "bookmark hide-text" %>
<% end %>