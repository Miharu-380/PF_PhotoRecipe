<% if users.exists? %>
  <% users.each do |user| %>
  <div class="followerings">
    <div class="profile-shape">
      <% if user.is_deleted == false %>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "60x60", class: "mr-2" %>
        <%= link_to user_path(user), data: {"turbolinks" => false} do %>
          <%= user.username %>
        <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>